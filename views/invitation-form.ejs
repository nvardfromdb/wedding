<% include header %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Invitation Form for <%=guest.name%> <%=guest.surname%></h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" action="/invite/<%=guest._id%>" method="POST">
                    <!--arrival_date-->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Arrival Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" placeholder="Arrival Date" name="arrival_date" id="arrival_date" value="<%=guest.arrival_date%>">
                        </div>
                    </div>

                    <!--departure_date-->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Departure Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" placeholder="Arrival Date" name="departure_date" value="<%=guest.departure_date%>">
                        </div>
                    </div>

                    <!--hotel_id-->
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Multi Grand Hotel</label>
                        <div class="col-sm-8">
                            <label class="radio-inline">
                                <input type="radio" name="hotel_id" value="1" class="hotel_id"> STANDARD
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="hotel_id" value="2" class="hotel_id"> STUDIO
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="hotel_id" value="3" class="hotel_id"> DELUXE
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="hotel_id" value="4" class="hotel_id"> JUNIOR SUIT
                            </label>

                        </div>
                    </div>

                    <div class="well">
                        <p style="font-weight:bold;">Bachelor Party</p>

                        <!--housing_budget-->
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Daily Budget For Housing</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon">$</div>
                                    <input type="number" class="form-control" placeholder="Amount" name="housing_budget" value="<%=guest.invitation.housing_budget%>">
                                </div>
                            </div>
                        </div>

                        <!--spending_budget-->
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Daily Budget For Spending</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-addon">$</div>
                                    <input type="number" class="form-control" placeholder="Amount" name="spending_budget" value="<%=guest.invitation.spending_budget%>">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4 clearfix">
                            <div class="input-group pull-right">
                                <input type="submit" value="Submit" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        var hotel_id = <%= guest.invitation.hotel_id %>
            $('.hotel_id').each(function(index) {
                if(hotel_id == $(this).attr('value')) {
                    $(this).prop('checked', true)
                }
            })
    })
</script>
<% include footer %>